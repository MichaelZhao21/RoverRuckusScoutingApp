<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScoring">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/addScoreTitle"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/autonomous"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/autonomous"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3" />

                <ToggleButton
                    android:id="@+id/landingButton"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:textOff="@string/autonomousLand"
                    android:textOn="@string/autonomousLand"
                    app:layout_constraintEnd_toStartOf="@+id/guideline27"
                    app:layout_constraintStart_toStartOf="@+id/guideline26" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3" />

                <ToggleButton
                    android:id="@+id/samplingButton"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:textOff="@string/autonomousSample"
                    android:textOn="@string/autonomousSample"
                    app:layout_constraintEnd_toStartOf="@+id/guideline29"
                    app:layout_constraintStart_toStartOf="@+id/guideline28" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3" />

                <ToggleButton
                    android:id="@+id/markerButton"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:textOff="@string/autonomousMarker"
                    android:textOn="@string/autonomousMarker"
                    app:layout_constraintEnd_toStartOf="@+id/guideline31"
                    app:layout_constraintStart_toStartOf="@+id/guideline30" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3" />

                <ToggleButton
                    android:id="@+id/parkingButton"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:textOff="@string/autonomousPark"
                    android:textOn="@string/autonomousPark"
                    app:layout_constraintEnd_toStartOf="@+id/guideline33"
                    app:layout_constraintStart_toStartOf="@+id/guideline32" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/teleOp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/teleOp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mineralsLander"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/mineralsLander"
                android:textAlignment="center"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />

                <Button
                    android:id="@+id/mineralsLanderDecrease"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/decrease" />

                <TextView
                    android:id="@+id/mineralsLanderCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/mineralsLanderIncrease"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/increase" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <TextView
                android:id="@+id/mineralsDepot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/mineralsDepot"
                android:textAlignment="center"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />

                <Button
                    android:id="@+id/mineralsDepotDecrease"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/decrease" />

                <TextView
                    android:id="@+id/mineralsDepotCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/mineralsDepotIncrease"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/increase" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addScoreTotal"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>